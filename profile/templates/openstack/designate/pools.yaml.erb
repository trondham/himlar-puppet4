---
- name: default
  description: Default Bind9 Pool
  attributes: {}
  nameservers:
    - host: <%= @ns1_public_addr %>
      port: 53
  ns_records:
    - hostname: <%= @ns1_public_name %>.
      priority: 1
  targets:
    - type: bind9
      description: Bind9 Server ns-01
      masters:
        - host: <%= @mdns_transport_addr %>
          port: 5354
      options:
        rndc_host: <%= @ns1_transport_addr %>
        rndc_port: 953
        rndc_config_file: /etc/rndc.conf
        rndc_key_file: /etc/rndc.key
        port: 53
        host: <%= @ns1_transport_addr %>
    - type: bind9
      description: Bind9 Server ns-02
      masters:
        - host: <%= @mdns_transport_addr %>
          port: 5354
      options:
        rndc_host: <%= @ns2_transport_addr %>
        rndc_port: 953
        rndc_config_file: /etc/rndc.conf
        rndc_key_file: /etc/rndc.key
        port: 53
        host: <%= @ns2_transport_addr %>
  also_notifies: []
